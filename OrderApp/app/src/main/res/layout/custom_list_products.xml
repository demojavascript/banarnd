<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/beverages"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/list_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dark_gray"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="16dp"
                android:text="Nescafe"/>
            <TextView
                android:id="@+id/list_product_op"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="@color/light_gray"
                android:text="Rs. 200"/>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:id="@+id/list_product_cp"
                android:layout_width="wrap_content"
                android:text="Rs. 180"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingTop="1dp"
                android:textColor="@color/txt_blue" />
            <TextView
                android:id="@+id/list_product_off"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30% OFF"
                android:padding="5dp"
                android:textColor="@color/whiteColor"
                android:background="@color/txt_blue"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
