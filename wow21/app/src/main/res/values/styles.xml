<resources>
    <!-- global theme start -->
    <style name="AppTheme" parent="AppTheme.Base"></style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@color/colorPrimaryDark</item>
        <item name="android:itemTextAppearance">@style/AppTheme.ItemTextStyle</item>

    </style>
    <style name="AppTheme.PopupActivity" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="CustomProgressDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- global theme end -->

    <!-- global toolbar theme start -->
    <style name="myCustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>
    <!-- global toolbar theme end -->

    <!-- homeview Textview heading theme start -->
    <style name="homeHeadingTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- homeview Textview heading theme end -->
    <!-- homeview Textview category textview theme start -->
    <style name="categoryTextStyle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- homeview Textview categorytextview theme end -->
    <!-- homeview Textview footer textview theme start -->
    <style name="footerTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- homeview Textview footer textview theme end -->
    <!-- button theme start -->
    <style name="roundBtnStyle">
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="greenBtnStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/green_btn_style</item>
    </style>
    <style name="greenBtnStyle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/green_btn_style</item>
    </style>
    <style name="transparentBtnStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAnchorBlue</item>
        <item name="android:background">@null</item>
    </style>
    <!-- button theme end -->
    <!--edittext theme start -->
    <style name="edDefaultStyle">
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/coloredhint</item>
        <item name="android:textColor">@color/coloredtext</item>
        <item name="android:background">@drawable/default_edittext_style</item>
    </style>
    <style name="edDefaultStyleNoBrd">
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/coloredhint</item>
        <item name="android:textColor">@color/coloredtext</item>
        <item name="android:background">@null</item>
    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="tvTableColumn">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGrayBTN</item>
        <item name="colorControlActivated">@color/colorGreenBarDark</item>
        <item name="colorAccent">@color/colorGreenBarDark</item>
    </style>
    <!--edittext theme end -->

    <style name="AppTheme.ItemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
