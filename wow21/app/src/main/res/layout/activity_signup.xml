<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.accelity.wow21.activities.SignupActivity">

    <ScrollView
        android:id="@+id/login_viewScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:padding="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_logo"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_step1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/layout_names_first"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bottom_brdr_style_default">
                        <EditText
                            android:id="@+id/ed_firstname"
                            style="@style/edDefaultStyleNoBrd"
                            android:hint="@string/tv_signup_fname_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_names_last"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bottom_brdr_style_default">
                        <EditText
                            android:id="@+id/ed_lastname"
                            style="@style/edDefaultStyleNoBrd"
                            android:hint="@string/tv_signup_lname_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_password"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_brdr_style_default">
                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/ed_password"
                        android:layout_weight="1"
                        style="@style/edDefaultStyleNoBrd"
                        android:hint="@string/tv_signup_pwd_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:id="@+id/img_password"
                        android:src="@drawable/ic_view_password_disable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_mobileno"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_brdr_style_default">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="+91"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:inputType="phone"
                        android:id="@+id/ed_mobileno"
                        android:layout_weight="1"
                        style="@style/edDefaultStyleNoBrd"
                        android:hint="@string/tv_signup_mobileno_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/img_mobileno"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_srcode"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_brdr_style_default">
                    <EditText
                        android:inputType="text"
                        android:id="@+id/ed_srcode"
                        android:layout_weight="1"
                        style="@style/edDefaultStyleNoBrd"
                        android:hint="@string/tv_signup_srccode_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_marginBottom="10dp"
                    android:text="@string/btn_signup_signup_text"
                    style="@style/greenBtnStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center_horizontal"
                        android:text="@string/tv_signupotp_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:textAllCaps="false"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="2dp"
                            android:id="@+id/register_btn_tac"
                            android:text="Terms of Use"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="@null"
                            android:textSize="12dp"
                            android:textColor="@color/colorAnchorBlue"/>
                        <TextView
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" and  "/>
                        <Button
                            android:textAllCaps="false"
                            android:id="@+id/register_btn_pp"
                            android:text="Privacy Policy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="@null"
                            android:textSize="12dp"
                            android:textColor="@color/colorAnchorBlue"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_signup_already_hv_acc_text"/>
                        <Button
                            android:layout_marginLeft="10dp"
                            android:id="@+id/btn_login"
                            android:background="@drawable/small_green_btn"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:text="@string/btn_signup_login_text"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
