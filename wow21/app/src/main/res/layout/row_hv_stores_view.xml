<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_storehome"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    android:layout_marginBottom="10dp"
    android:elevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/home_storegrid_border_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:clickable="false"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_store"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/babycares"/>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_storename"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text=""
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_address"
                        android:textColor="@color/colorlightGrayBlue"
                        android:textSize="10sp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:id="@+id/loutclosedOn"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorlightGrayBlue"
                            android:textSize="10sp"
                            android:text="Remains closed on "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_closingDay"
                            android:textColor="@color/colorlightGrayBlue"
                            android:textSize="10sp"
                            android:text="Wednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_distance"
                            android:textColor="@color/colorlightGrayBlue"
                            android:gravity="bottom"
                            android:textSize="12sp"
                            android:text=""
                            android:textAllCaps="false"
                            android:drawableLeft="@drawable/ic_location"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_store_view"
                            android:textColor="@color/colorAnchorBlue"
                            android:textSize="10sp"
                            android:textAllCaps="false"
                            android:background="@null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_store"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
          </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>