<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#80000000"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:gravity="bottom"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/layout_names_first"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bottom_brdr_style_default">
                            <EditText
                                android:enabled="false"
                                android:id="@+id/ed_firstname"
                                style="@style/edDefaultStyleNoBrd"
                                android:hint="@string/tv_signup_fname_hint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <requestFocus/>
                                </EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_names_last"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bottom_brdr_style_default">
                            <EditText
                                android:enabled="false"
                                android:id="@+id/ed_lastname"
                                style="@style/edDefaultStyleNoBrd"
                                android:hint="@string/tv_signup_lname_hint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_mobileno"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_brdr_style_default">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="+91"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:enabled="false"
                        android:inputType="phone"
                        android:id="@+id/ed_mobileno"
                        android:layout_weight="1"
                        style="@style/edDefaultStyleNoBrd"
                        android:hint="@string/tv_signup_mobileno_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/img_mobileno"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_otp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_brdr_style_default">
                    <EditText
                        android:id="@+id/ed_otp"
                        android:inputType="phone"
                        android:layout_weight="1"
                        style="@style/edDefaultStyleNoBrd"
                        android:hint="@string/tv_forgetpwd_otp_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/img_otp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_correct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_marginBottom="20dp"
                    android:text="Submit"
                    style="@style/greenBtnStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_resendotp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/btn_otp_resend_text"
                    style="@style/greenBtnStyle"
                    android:background="@null"
                    android:textColor="@color/colorAnchorBlue"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>