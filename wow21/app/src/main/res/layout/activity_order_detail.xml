<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.accelity.wow21.activities.OrderDetailActivity">
    <include android:id="@+id/toolbar" layout="@layout/toolbar"></include>
    <ScrollView
        android:id="@+id/scrollBox"
        android:visibility="gone"
        android:layout_below="@+id/toolbar"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    android:layout_margin="4dp">
                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:clickable="false"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <View
                                    android:id="@+id/view_orderstatus"
                                    android:background="@android:color/holo_green_dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp" />
                                <LinearLayout
                                    android:padding="10dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textColor="@color/colorGray3"
                                            android:textSize="14sp"
                                            android:text="Order No"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                        <TextView
                                            android:textStyle="bold"
                                            android:id="@+id/tv_orderno"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="14sp"
                                            android:layout_marginTop="5dp"
                                            android:text=""
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textColor="@color/colorGray3"
                                            android:textSize="14sp"
                                            android:text="Order Date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                        <TextView
                                            android:textStyle="bold"
                                            android:id="@+id/tv_wdate"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="14sp"
                                            android:layout_marginTop="5dp"
                                            android:text="Date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:padding="10dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textColor="@color/colorGray3"
                                            android:textSize="14sp"
                                            android:text="Total Items"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                        <TextView
                                            android:textStyle="bold"
                                            android:id="@+id/tv_dealcount"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textSize="14sp"
                                            android:layout_marginTop="5dp"
                                            android:text="2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textColor="@color/colorGray3"
                                            android:textSize="14sp"
                                            android:text="Total Amount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:layout_marginRight="2dp"
                                                android:textStyle="bold"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="14sp"
                                                android:layout_marginTop="5dp"
                                                android:text="@string/rs"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />
                                            <TextView
                                                android:textStyle="bold"
                                                android:id="@+id/tv_orderamount"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="14sp"
                                                android:layout_marginTop="5dp"
                                                android:text="Date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <View
                                        android:background="@color/colorGrayBtn"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp" />
                                    <LinearLayout
                                        android:padding="10dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/tv_storename"
                                            android:text="hxg "
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                        <View
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp" />
                                        <RatingBar
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:isIndicator="true"
                                            android:numStars="5"
                                            android:stepSize="1"
                                            android:rating="0"
                                            android:id="@+id/pop_ratingbar"
                                            android:theme="@style/RatingBar"
                                            style="?android:attr/ratingBarStyleSmall" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/coloredtext"
                    android:text="Item Summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="6dp"
                    android:layout_margin="4dp"
                    android:elevation="4dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableLayout
                                android:id="@+id/objDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true" >

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:background="@color/colorWhite"
                                    android:paddingRight="6dp"
                                    android:paddingLeft="2dp"
                                    android:paddingTop="6dp"
                                    android:paddingBottom="6dp">
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:gravity="left"
                                        android:layout_weight="1"
                                        android:textColor="@color/colorlightGrayBlue2"
                                        android:layout_width="wrap_content"
                                        android:text="Item"/>
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/colorlightGrayBlue2"
                                        android:layout_width="30dp"
                                        android:text="Qty"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginRight="0dp"/>
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:gravity="right"
                                        android:textColor="@color/colorlightGrayBlue2"
                                        android:layout_width="50dp"
                                        android:text="MRP"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginRight="0dp"/>
                                    <TextView
                                        android:gravity="right"
                                        android:textColor="@color/colorlightGrayBlue2"
                                        android:layout_width="80dp"
                                        android:text="WOW Price"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginRight="0dp"/>/>
                                </TableRow>

                            </TableLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/coloredtext"
                    android:text="Payment Summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardview_step1"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="14dp"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="Total MRP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="@string/rs"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_totalMRP"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:textSize="12sp"
                                    android:text="347"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="14dp"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="Total WOW Price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="@string/rs"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_totalWOWAmount"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:textSize="12sp"
                                    android:text="347"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/lout_couponBox_cb"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_couponCode_cb"
                                    android:textSize="10dp"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/colorlightGrayBlue"
                                        android:text="@string/rs"
                                        android:textSize="10sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:id="@+id/tv_cbamount"
                                        android:textColor="@color/colorlightGrayBlue"
                                        android:text=""
                                        android:textSize="10sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:textSize="10dp"
                                        android:text=" Cashback "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/lout_couponBox"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_couponCode"
                                    android:textSize="14dp"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="@string/rs"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_couponAmount"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:textSize="12sp"
                                    android:text="140"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="14dp"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="WOW Savings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="@string/rs"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_totalSavings"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:textSize="12sp"
                                    android:text="347"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/lout_wallet"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="14dp"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="WOW Cash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="@string/rs"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_walletpayment"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:textSize="12sp"
                                    android:text="347"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="visible"
                                android:id="@+id/lout_pmode"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="14dp"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="Payment Mode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:visibility="gone"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:text="@string/rs"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_pmode"
                                    android:textColor="@color/colorlightGrayBlue"
                                    android:textSize="12sp"
                                    android:text="Cash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/test_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></LinearLayout>
                        <LinearLayout
                            android:background="@color/colorYellowBadge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="14dp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="Net Amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="@string/rs"
                                    android:textSize="12sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_payableAMount"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12sp"
                                    android:text="140"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
