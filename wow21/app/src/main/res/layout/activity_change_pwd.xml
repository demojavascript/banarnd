<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.accelity.wow21.activities.ChangePwdActivity">
    <include android:id="@+id/toolbar" layout="@layout/toolbar"></include>
    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/bottom_brdr_style_default"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ed_cpwd"
                        android:inputType="textPassword"
                        android:layout_weight="1"
                        style="@style/edDefaultStyleNoBrd"
                        android:hint="Current Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:id="@+id/img_cpwd"
                        android:src="@drawable/ic_view_password_disable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/bottom_brdr_style_default"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ed_npwd"
                        android:inputType="textPassword"
                        android:layout_weight="1"
                        style="@style/edDefaultStyleNoBrd"
                        android:hint="New Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/bottom_brdr_style_default"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ed_cnpwd"
                        android:inputType="textPassword"
                        android:layout_weight="1"
                        style="@style/edDefaultStyleNoBrd"
                        android:hint="Confirm New Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:id="@+id/img_cnpwd"
                        android:src="@drawable/ic_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginBottom="20dp"
                        android:id="@+id/btn_changepwd"
                        android:text="@string/btn_forgetpwd_verify_otp_txt"
                        style="@style/greenBtnStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_forgetpwd"
                        style="@style/transparentBtnStyle"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_login_forget_text"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
