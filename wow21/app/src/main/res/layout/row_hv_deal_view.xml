<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_row_deal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="0dp"
    android:layout_margin="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/home_dealgrid_border_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/routNormal"
            android:clickable="false"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="false"
                        android:id="@+id/tv_dealdesc"
                        android:maxLines="3"
                        android:minLines="3"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/relidd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginTop="10dp"
                                android:id="@+id/img_dealimg"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_width="165dp"
                                android:layout_height="165dp"
                                />
                            <LinearLayout
                                android:visibility="invisible"
                                android:id="@+id/loutSuper"
                                android:layout_marginTop="145dp"
                                android:background="#90ecc665"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:padding="8dp"
                                    android:textStyle="bold"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp"
                                    android:text="Super Deal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="left"
                            android:layout_width="32dp"
                            android:layout_height="42dp"
                            android:background="@drawable/shape_triangle"
                            android:orientation="vertical"
                            android:padding="2dp">
                            <TextView
                                android:layout_marginTop="7dp"
                                android:id="@+id/tv_dealoff"
                                android:gravity="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:text="99"
                                android:textAllCaps="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginRight="1dp"
                            android:paddingTop="6dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="4dp"
                            android:background="@drawable/wow_box_round"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/colorBlack"
                                android:text="@string/rs"
                                android:textAllCaps="false"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginLeft="2dp"
                                android:id="@+id/grid_dealmrp"
                                android:textColor="@color/colorBlack"
                                android:text="20"
                                android:textAllCaps="false"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textAllCaps="false"
                                android:textColor="@color/colorlightGrayBlue"
                                android:text="@string/rs"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textAllCaps="false"
                                android:id="@+id/grid_dealmrp2"
                                android:textColor="@color/colorlightGrayBlue"
                                android:text="55"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_marginBottom="4dp"
                            android:background="@color/colorGrayBtn"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/perView1"
                                android:background="@drawable/deal_bbox"
                                android:layout_width="10dp"
                                android:layout_height="10dp"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>
                            <View
                                android:id="@+id/perView2"
                                android:background="@drawable/deal_bbox"
                                android:layout_width="10dp"
                                android:layout_height="10dp"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>
                            <View
                                android:id="@+id/perView3"
                                android:background="@drawable/deal_bbox"
                                android:layout_width="10dp"
                                android:layout_height="10dp"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>
                            <View
                                android:id="@+id/perView4"
                                android:background="@drawable/deal_bbox"
                                android:layout_width="10dp"
                                android:layout_height="10dp"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>
                            <View
                                android:id="@+id/perView5"
                                android:background="@drawable/deal_bbox"
                                android:layout_width="10dp"
                                android:layout_height="10dp"/>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_soldtext"
                            android:gravity="center_horizontal"
                            android:textAllCaps="false"
                            android:padding="6dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:text="45 Out of 60 Sold "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>