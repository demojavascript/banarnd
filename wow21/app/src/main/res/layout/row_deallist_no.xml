<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_deallist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:background="@color/colorWhite"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingBottom="4dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:alpha=".4"
                        android:id="@+id/dealimgDeal"
                        android:padding="10dp"
                        android:src="@drawable/img_product"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />
                    <TextView
                        android:alpha=".4"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:id="@+id/tv_dealtxt"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryOrange"
                        android:text="Super Deal"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/coloredhint"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:alpha=".4"
                    android:id="@+id/dealtitle"
                    android:textColor="@color/colorPrimary"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:alpha=".4"
                            android:id="@+id/dealdiscount"
                            android:textColor="@color/colorLightBluel"
                            android:text=""
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:alpha=".4"
                            android:id="@+id/dealdiscountOff"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/colorLightBluel"
                            android:text="@string/tv_off_post"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:alpha=".4"
                            android:id="@+id/tv_rs1"
                            android:textColor="@color/colorBlack"
                            android:text="@string/rs"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:alpha=".4"
                            android:id="@+id/dealSellingprice"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/colorBlack"
                            android:text="100"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:alpha=".4"
                            android:id="@+id/tv_rs2"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/colorlightGrayBlue"
                            android:text="@string/rs"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:alpha=".4"
                            android:id="@+id/dealMRPprice"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/colorlightGrayBlue"
                            android:text=""
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:alpha=".4"
                            android:visibility="gone"
                            android:id="@+id/btn_subtract"
                            android:src="@drawable/ic_circle_substract"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:alpha=".4"
                            android:visibility="gone"
                            android:id="@+id/tv_dealQty"
                            android:gravity="center"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:text="0"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:alpha=".4"
                            android:visibility="gone"
                            android:id="@+id/btn_addition"
                            android:src="@drawable/ic_circle_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>