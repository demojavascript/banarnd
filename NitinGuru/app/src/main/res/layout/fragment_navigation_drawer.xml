<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:clickable="true">
    <RelativeLayout
        android:id="@+id/header_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linout_ff"
            android:background="@color/colorAccent"
            android:padding="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/linout_ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="4dp"
                    app:border_width="1dp"
                    app:border_color="@color/colorlightGrayBlue"
                    android:id="@+id/user_profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user_profile_p" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_username"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_address"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:dividerHeight="1dp"
        android:divider="@color/colorPrimaryDark"
        android:layout_below="@+id/header_box"
        android:id="@+id/sidebar_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
